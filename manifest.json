{
  "manifest_version": 3,
  "name": "Crawl Drive Base",
  "version": "1.0",
  "description": "Crawl Drive Base | HaiZuka",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "/image/icon.png"
  },
  "icons": {
    "48": "/image/icon.png",
    "128": "/image/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "notifications",
    "storage"
  ]
}
